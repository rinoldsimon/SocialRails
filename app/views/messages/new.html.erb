<%= form_for :message, url: messages_path do |f| %>
  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message, required: true %>
  </p>

    <%= f.hidden_field :receiver_user_id, :value => @recv_uid %>
    <%= f.hidden_field :user_id %>

  <p>
    <%= f.submit 'Send Message'%>
  </p>
<% end %>