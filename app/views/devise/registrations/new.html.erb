<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

<div class="container">
    
  <div class="omb_login">
      <h3 class="omb_authTitle">Sign up or 
      <%- if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name) %><br />
      <% end -%>
        </h3>
        
    <div class="row omb_row-sm-offset-3 omb_socialButtons">
    
    <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          
          <% if provider.to_s.titleize == "Facebook" %>
          <div class="col-xs-4 col-sm-3">
          <%= link_to '<i class="fa fa-facebook visible-xs"></i><span class="hidden-xs">Facebook</span>'.html_safe, omniauth_authorize_path(resource_name, provider), :class => 'btn btn-lg btn-block omb_btn-facebook' %>
          </div>

        <% elsif provider.to_s.titleize == "Github" %>
          <div class="col-xs-4 col-sm-3">
        <%= link_to '<i class="fa fa-twitter visible-xs"></i><span class="hidden-xs">Github</span>'.html_safe, omniauth_authorize_path(resource_name, provider), :class => 'btn btn-lg btn-block omb_btn-twitter' %>
          </div>  
        <% end %>

      <% end -%>
      <% end -%>

    </div>

    <div class="row omb_row-sm-offset-3 omb_loginOr">
      <div class="col-xs-12 col-sm-6">
        <hr class="omb_hrOr">
        <span class="omb_spanOr">or</span>
      </div>
    </div>

    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-6">  
          <form class="omb_loginForm" action="" autocomplete="off" method="POST">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <input type="text" autofocus="true" value ="<%= @user.name %>" class="form-control" name="user[name]" placeholder="Name">
          </div>
          <span class="help-block"></span>

          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <input type="text" value ="<%= @user.email %>" class="form-control" name="user[email]" placeholder="Email address">
          </div>
          <span class="help-block"></span>
                    
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <input  autocomplete="off" type="password" value ="<%= @user.password %>" class="form-control" name="user[password]" placeholder="Password <% if @validatable %>(<%= @minimum_password_length %> characters minimum)<% end %>">
          </div>
          <span class="help-block"></span>
                    
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <input type="password" value ="<%= @user.password_confirmation %>" class="form-control" name="user[password_confirmation]" placeholder="Confirm Password">
          </div>
                    <span class="help-block"><font color="red"> <%= devise_error_messages! %> </font></span>

          <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        </form>
      </div>
      </div>      
  </div>

</div>

<% end %>
